    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Streamlit App",
            "type": "python",
            "request": "launch",
            "program": "-m",
            "args": [
                "streamlit",
                "run",
                "rrg_app.py",
                "--server.port",
                "8501"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debugger: feed data history",
            "type": "debugpy",
            "request": "launch",
            "program": "update_ssi_prices.py",
            "console": "integratedTerminal",
            "args": [
                "--mode",
                "history"
            ]
        },
        {
            "name": "Debugger: feed data today",
            "type": "debugpy",
            "request": "launch",
            "program": "update_ssi_prices.py",
            "console": "integratedTerminal",
            "args": [
                "--mode",
                "latest"
            ]
        }
    ]
}